{
  "name": "@findora-network/findora-sdk.js",
  "version": "0.0.1",
  "description": "The JavaScript SDK for Findora Network",
  "license": "MIT",
  "author": "Findora Network",
  "keywords": [
    "crypto",
    "blockchain",
    "smart-contracts"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/FindoraNetwork/findora-sdk"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "buildAll": "tsc && webpack --mode production",
    "build": "tsc",
    "test": "jest --watch --detectOpenHandles",
    "test:sdk:unit": "jest -t '(unit test)' --testPathIgnorePatterns=\\contract\\|integration",
    "test:sdk:integration": "INTEGRATION_ENV_NAME=local jest  --watch -t 'integration test'",
    "test:evm:integration:contract": "RPC_ENV_NAME=local jest --detectOpenHandles  --watch Inbox.contract.spec.js ",
    "test:evm:integration:tx": "RPC_ENV_NAME=local jest --detectOpenHandles  --watch Lottery.contract.spec.js ",
    "test:emv:integration:rpc:local": "RPC_ENV_NAME=local jest --detectOpenHandles --watch -t 'rpc test' rpc.integration.spec.ts ",
    "test:emv:integration:rpc:negative": "RPC_ENV_NAME=dev jest --detectOpenHandles --watch -t 'rpc test' rpc.integration.negative.spec.ts ",
    "test:emv:integration:rpc:devnet": "RPC_ENV_NAME=dev jest --detectOpenHandles  --watch -t 'rpc test' rpc.integration.spec.ts ",
    "prettier": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "doc": "typedoc --out docs src",
    "prepublishOnly": "npm run build",
    "start:build": "tsc -w  ",
    "start:run": "nodemon dist/run.js --ignore cache/",
    "jest-coverage": "yarn run jest -- --coverage",
    "start": "concurrently npm:start:*"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/user-event": "^13.1.5",
    "@types/jest": "^26.0.14",
    "@types/json-bigint": "^1.0.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.17",
    "@types/readable-stream": "^2.3.9",
    "@types/tmp": "^0.2.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "buffer": "^6.0.3",
    "concurrently": "^6.0.1",
    "eslint": "^7.5",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "msw": "^0.28.1",
    "nodemon": "^2.0.7",
    "path-browserify": "^1.0.1",
    "prettier": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "truffle-hdwallet-provider": "0.0.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.21.9",
    "typescript": "^4.1.5",
    "typescript-json-schema": "^0.50.1",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.3.0",
    "ganache-cli": "6.12.2",
    "solc": "0.4.17"
  },
  "dependencies": {
    "@types/btoa": "^1.2.3",
    "aws-sdk": "^2.929.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "bignumber.js": "^9.0.1",
    "dotenv": "^10.0.0",
    "env": "^0.0.2",
    "findora-wallet-wasm": "git+ssh://git@github.com:FindoraNetwork/wasm-js-bindings.git#test-simon-v0.2.96",
    "js-base64": "^3.6.1",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.21",
    "os-browserify": "^0.3.0",
    "sleep-promise": "^9.1.0",
    "util": "^0.12.4",
    "web3": "^1.5.2"
  }
}
